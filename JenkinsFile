pipeline {
    agent {
        docker {
            image 'node:15-alpine'
            args '-u root:root -p 3000:3000'
            reuseNode true
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'chown -R 501:20 "/.npm"'
                sh 'npm install'
            }
        }

    }
}